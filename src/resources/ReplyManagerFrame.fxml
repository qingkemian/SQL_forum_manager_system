<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controller.ReplyController">
    <children>
        <VBox prefHeight="700.0" prefWidth="800.0">
            <children>
                <HBox alignment="CENTER" prefHeight="54.0" prefWidth="800.0">
                    <children>
                        <Label text="回复帖管理界面" textAlignment="CENTER">
                            <font>
                                <Font name="System Bold" size="36.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="800.0" spacing="50.0">
                    <children>
                        <Button fx:id="btAll" mnemonicParsing="false" text="获取全部" />
                        <Label text="用户ID：" />
                        <TextField fx:id="inQueryUserID" />
                        <Button fx:id="btQuery" mnemonicParsing="false" text="查询" />
                    </children>
                </HBox>
                <HBox prefHeight="294.0" prefWidth="800.0">
                    <children>
                        <TableView fx:id="userTable" prefHeight="292.0" prefWidth="800.0">
                            <columns>
                                <TableColumn fx:id="userID" prefWidth="105.0" text="回帖编号" />
                                <TableColumn fx:id="userName" prefWidth="121.0" text="主题帖编号" />
                                <TableColumn fx:id="userPw" prefWidth="105.0" text="回帖用户编号" />
                                <TableColumn fx:id="userSex" prefWidth="275.0" text="回帖内容" />
                                <TableColumn fx:id="userMail" prefWidth="148.0" text="回帖时间" />
                            </columns>
                        </TableView>
                    </children>
                </HBox>
                <HBox prefHeight="296.0" prefWidth="800.0">
                    <children>
                        <VBox prefHeight="282.0" prefWidth="879.0">
                            <children>
                                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
                                    <children>
                                        <Label prefHeight="19.0" prefWidth="86.0" text="回帖编号：" />
                                        <TextField fx:id="inUserID" />
                                        <Label prefHeight="21.0" prefWidth="86.0" text="主题帖编号：" />
                                        <TextField fx:id="inUserName" />
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
                                    <children>
                                        <Label prefHeight="19.0" prefWidth="86.0" text="回帖用户编号：" />
                                        <TextField fx:id="inUserPw" />
                              <Label prefHeight="19.0" prefWidth="86.0" text="回帖时间：" />
                              <TextField fx:id="inUserPw1" />
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
                                    <children>
                                        <Label prefHeight="22.0" prefWidth="86.0" text="回帖内容：" />
                              <TextArea prefHeight="74.0" prefWidth="500.0" />
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
                                    <children>
                                        <Button mnemonicParsing="false" text="添加" />
                                        <Button fx:id="btUpdate" mnemonicParsing="false" text="修改" />
                                        <Button mnemonicParsing="false" text="删除" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children></HBox>
            </children>
        </VBox>
    </children>
